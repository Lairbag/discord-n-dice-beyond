{
    "manifest_version": 2,
    "name": "Discord&Dice Beyond",
    "version": "1.3",
  
    "description": "Roll dice into your Discord from D&DBeyond character sheet. Lance les d√®s dans ton Discord depuis ta fiche de personnage D&DBeyond.",
  
    "icons": {
      "16": "icons/d20-16.png",
      "32": "icons/d20-32.png",
      "48": "icons/d20-48.png",
      "96": "icons/d20-96.png",
      "128": "icons/d20-128.png"
    },
  
    "content_scripts": [
      {
        "matches": ["https://*.dndbeyond.com/profile/*/characters/*"],
        "js": ["lib/browserManager.js", "lib/dice.js","discord-n-dice-beyond.js"]
      }
    ],

    "permissions": [      
      "storage"
    ],

    "browser_action": {
      "default_icon": {
        "16": "icons/d20-16.png",
        "32": "icons/d20-32.png",
        "48": "icons/d20-48.png",
        "96": "icons/d20-96.png",
        "128": "icons/d20-128.png"
      },
      "default_title": "Discord&Dice Beyond",
      "default_popup": "popup/popup.html"
    },

    "web_accessible_resources": [
      "icons/d20-16.png",
      "icons/d20-32.png",
      "icons/d20-48.png",
      "icons/d20-96.png"
    ]
  }